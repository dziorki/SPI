{% extends "::base.html.twig" %} 
{% block content %}

<h1>Operation list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Company</th>
            <th>Account</th>
            <th>Provision</th>
            <th>Ammount</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('operation_show', { 'wallet_id': wallet_id, 'id': entity.id }) }}">{{ entity.id }}</a></td>
	    <td>{{ entity.company }}</td>
            <td>{{ entity.account }}</td>
            <td>{{ entity.provision }}</td>
            <td>{{ entity.ammount }}</td>
            <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('operation_show', { 'wallet_id': wallet_id, 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('operation_edit', { 'wallet_id': wallet_id, 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('operation_new', { 'wallet_id' : wallet_id }) }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
